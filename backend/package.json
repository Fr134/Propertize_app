{
  "name": "@propertize/backend",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --external:@prisma/client",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "npx tsx prisma/seed.ts",
    "postinstall": "prisma generate --schema=prisma/schema.prisma"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.3",
    "exceljs": "^4.4.0",
    "hono": "^4.7.11",
    "jose": "^5.10.0",
    "prisma": "^5.22.0",
    "resend": "^6.9.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "esbuild": "^0.25.0",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
